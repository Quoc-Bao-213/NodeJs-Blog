<div class="mt-4">
    <h3>Create new course</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Enter name...">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" name="description" class="form-control" id="description" placeholder="Enter description...">
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" name="videoId" class="form-control" id="videoId" placeholder="Enter video id...">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" name="level" class="form-control" id="level" placeholder="Enter level...">
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>